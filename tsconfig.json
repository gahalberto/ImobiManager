{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES6",
      "module": "commonjs",
      "strict": false,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"],
   
}